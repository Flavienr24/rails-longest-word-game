<div class="container">
  <h1>New Game</h1>
  <div class="letters_list">
    <ul>
      <li><%= @letters[0] %></li>
      <li><%= @letters[1] %></li>
      <li><%= @letters[2] %></li>
      <li><%= @letters[3] %></li>
      <li><%= @letters[4] %></li>
      <li><%= @letters[5] %></li>
      <li><%= @letters[6] %></li>
      <li><%= @letters[7] %></li>
      <li><%= @letters[8] %></li>
      <li><%= @letters[9] %></li>
    </ul>
  </div>


  <form action="/score">
    <label  for="user_word">What is the longest word you can find?</label>
    <input class="input-field" type="text" name="user_word" placeholder="Tape your word">
    <input class="btn-submit" type="submit" value="Send!">
  </form>

</div>

